@model EficienciaEnergetica.Models.SelectGroupRolesViewModel
@{
    ViewBag.Title = "Permisos";
}

<h2>Permisos para el rol @Html.DisplayFor(model => model.GroupName)</h2>
@using (Html.BeginForm("GroupRoles", "Groups", FormMethod.Post, new { encType = "multipart/form-data", name = "myform" }))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        @Html.ValidationSummary(true)
        <br />

        <div class="form-group">
            <div class="col-md-10">
                @Html.HiddenFor(model => model.GroupName)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                @Html.HiddenFor(model => model.GroupId)
            </div>
        </div>
        <div class="wrapper wrapper-content animated fadeInRight">
            <div class="row" style="margin-top: -10px;">
                <div class="col-lg-12">
                    <div class="ibox float-e-margins">
                        <div class="ibox-title">
                            <h5>Seleccione los permisos para el rol</h5>
                        </div>
                        <div class="ibox-content">
                            <table class="table table-striped table-bordered table-hover dataTables-example">
                                <thead>
                                    <tr>
                                        <th style="width:90px">
                                            Asignación
                                        </th>
                                        <th>Permiso</th>
                                        <th>Descripción</th>
                                    </tr>
                                </thead>
                                @Html.EditorFor(model => model.Roles)
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-default btn-md" })
                <input type="submit" value="Guardar" class="btn btn-primary btn-md" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Regresar a la lista", "Index")
</div>
