@model EficienciaEnergetica.Models.InventarioIndexModel

@{
    ViewBag.Title = "Detalle del Inventario";
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row" style="margin-top: -10px;">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <div class="ibox-title">
                        <h2>Detalle Del Inventario</h2>
                        <table class="pull-right" style="margin-top:-40px;">
                            <tr>
                                <td>@Html.ActionLink("Regresar a la lista", "Index", null, new { @class = "btn btn-primary", @title = "Regresar a la Lista" })</td>
                                <td style="width: 5px;"></td>
                                <td>@Html.ActionLink("Imprimir", "Print", new { id = Model.InventarioSedeID }, new { @class = "btn btn-primary", @title = "Imprimir" })</td>
                                <td style="width: 5px;"></td>
                                <td>@Html.ActionLink("Editar", "Manage", new { id = Model.InventarioSedeID }, new { @class = "btn btn-primary", @title = "Editar" })</td>
                            </tr>
                        </table>
                    </div>
                </div>
                <div class="ibox-content">
                    <dl class="dl-horizontal">

                        @if (@EficienciaEnergetica.Helpers.ApplicationContext.CurrentUser.IsSuperAdmin)
                        {
                            <dt>Empresa</dt>
                            <dd>@Html.DisplayFor(model => model.NombreEmpresa)</dd>
                        }

                        <dt>Sede</dt>
                        <dd>@Html.DisplayFor(model => model.NombreSede)</dd>

                        <dt>Ciudad</dt>
                        <dd>@Html.DisplayFor(model => model.NombreCiudad)</dd>

                        <dt>Fecha</dt>
                        <dd>@Html.DisplayFor(model => model.FechaShort)</dd>

                        <dt>Nivel Térmico</dt>
                        <dd>@Html.DisplayFor(model => model.NombreNivelTermico)</dd>

                        <dt>Asesor</dt>
                        <dd>@Html.DisplayFor(model => model.NombreAsesor)</dd>
                    </dl>
                </div>
            </div>
        </div>

        <br />

        <div class="form-group">
            <div class="col-md-12">
                <div class="ibox-title">
                    <h2>Equipos</h2>
                </div>
                <div class="content">
                    <div class="table-responsive">
                        <table id="tblDetail" class="table table-striped table-bordered table-hover dataTables-example">
                            <thead>
                                <tr>
                                    <th>Tipo de Equipo</th>
                                    <th>Nombre de Equipo</th>
                                    <th>Consumo</th>
                                    <th>UNDS</th>
                                    <th>Semana</th>
                                    <th>Sábado</th>
                                    <th>Domingo</th>
                                    <th>Mes</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.DetailEquipos != null)
                                {
                                    foreach (var item in Model.DetailEquipos)
                                    {
                                        <tr id="@("del"+item.InventarioEquipoID)">
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Equipos.TipoEquipo.NombreTipoEquipo)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Equipos.DescripcionEquipo)
                                            </td>
                                            <td align="right">
                                                @Html.DisplayFor(modelItem => item.Equipos.Consumo)
                                            </td>
                                            <td align="right">
                                                @Html.DisplayFor(modelItem => item.Cantidad)
                                            </td>
                                            <td align="right">
                                                @Html.DisplayFor(modelItem => item.ConsumoSemana)
                                            </td>
                                            <td align="right">
                                                @Html.DisplayFor(modelItem => item.ConsumoSabado)
                                            </td>
                                            <td align="right">
                                                @Html.DisplayFor(modelItem => item.ConsumoDomingo)
                                            </td>
                                            <td align="right">
                                                @Html.DisplayFor(modelItem => item.ConsumoMes)
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <br />

        <div class="form-group">
            <div class="col-md-12">
                <div class="ibox-title">
                    <h2>Acciones De Ahorro</h2>
                </div>
                <div class="content">
                    <div class="table-responsive">
                        <table id="tblDetailActions" class="table table-striped table-bordered table-hover dataTables-example">
                            <thead>
                                <tr>
                                    <th>Tipo de Equipo</th>
                                    <th>Acción de Ahorro</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.DetailAcciones != null)
                                {
                                    foreach (var item in Model.DetailAcciones)
                                    {
                                        <tr id="@("act"+item.AccionSedeID)">
                                            <td>
                                                @Html.DisplayFor(modelItem => item.TiposEquipos.NombreTipoEquipo)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.AccionAhorro.DescripcionAccionAhorro)
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
