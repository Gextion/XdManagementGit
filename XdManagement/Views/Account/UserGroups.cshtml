@model EficienciaEnergetica.Models.SelectUserGroupsViewModel

@{
    ViewBag.Title = "Roles";
}

@using (Html.BeginForm("UserGroups", "Account", FormMethod.Post, new { encType = "multipart/form-data", name = "myform" }))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        @Html.ValidationSummary(true)
        <br />

        <div class="form-group">
            <div class="col-md-10">
                @Html.HiddenFor(model => model.UserName)
            </div>
        </div>
        <h4>Seleccione los roles a los que pertenece el usuario</h4>
        
        <div class="wrapper wrapper-content animated fadeInRight">
            <div class="row" style="margin-top: -10px;">
                <div class="col-lg-12">
                    <div class="ibox float-e-margins">
                        <div class="ibox-title">
                            <h5>Roles</h5>
                            <input type="submit" value="Guardar" class="btn btn-primary pull-right" style="margin-top:-8px; margin-left: 10px;" />
                            @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-default btn-md pull-right", @style = "margin-top:-8px;" })
                        </div>
                        <div class="ibox-content">
                            <table class="table table-striped table-bordered table-hover dataTables-example">
                                <thead>
                                    <tr>
                                        <th style="width:90px">
                                            Asignación
                                        </th>
                                        <th>
                                            Rol
                                        </th>
                                    </tr>
                                </thead>
                                @Html.EditorFor(model => model.Groups)
                            </table>

                            <br />

                            <div>
                                @Html.ActionLink("Regresar a la lista", "Index")
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}


