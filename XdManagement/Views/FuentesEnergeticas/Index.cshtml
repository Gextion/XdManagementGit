
@model IEnumerable<EficienciaEnergetica.Models.FuenteEnergetica>

@{
    ViewBag.Title = "Fuentes Energéticas";
}
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row" style="margin-top: -10px;">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <div class="ibox-title">
                        <h2>Fuentes Energéticas</h2>
                        <input type="button" value="Nueva Fuente Energética" class="btn btn-primary pull-right" onclick="location.href='@Url.Action("Create")'" style="margin-top:-40px;" />
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover dataTables-example">
                            <thead>
							    <tr>
								    <th>
									    @Html.DisplayNameFor(model => model.Fuente)
								    </th>
								    <th>
									    @Html.DisplayNameFor(model => model.UnidadMedida)
								    </th>
								    <th>Acciones</th>
							    </tr>
						    </thead>

                        
						    @foreach (var item in Model) 
						    {

                                <tr id="@("del"+item.FuenteID)">
							
																							    <td>
									    @Html.DisplayFor(modelItem => item.Fuente)
								    </td>
																		    <td>
									    @Html.DisplayFor(modelItem => item.UnidadMedida)
								    </td>
													    <td>
									    @Html.ActionLink(" ", "Edit", new { id = item.FuenteID }, new { @class = "fa fa-pencil-square-o", @title = "Editar" }) |
									    @Html.ActionLink(" ", "Details", new { id = item.FuenteID }, new { @class = "fa fa-eye", @title = "Ver Detalle" }) |
                                        <a class="fa fa-trash-o" href="#" data-backdrop="static" data-href="FuenteEnergetica Id=@item.FuenteID" data-pkid="@item.FuenteID" data-toggle="modal" data-target="#confirm-delete" title="Eliminar"></a>
								    </td>
							    </tr>
						    }
					    </table>
                    </div>
				</div>
            </div>
        </div>
    </div>
</div>

<script>
     $(document).on('show.bs.modal', '#confirm-delete', function (e) {
         $('#btnDelete').attr('onclick', 'deleteAction(' + $(e.relatedTarget).data('pkid') + ');');
     })
 </script>

<div class="modal fade" id="confirm-delete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">Confirmar Eliminación de la Fuente Energética</h4>
            </div>

            <div class="modal-body">
                <p>Estás a punto de eliminar un registro, este procedimiento es irreversible.</p>
                <p>¿Quieres proceder?</p>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                <a id="btnDelete" class="btn btn-danger btn-ok" data-dismiss="modal">Eliminar</a>
            </div>
        </div>
    </div>
</div>

@section Styles {
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
    @Styles.Render("~/bundles/bootstrapdialog/css")
}

@section Scripts {
    @Scripts.Render("~/plugins/dataTables")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrapdialog")

    <script type="text/javascript">

        function deleteAction(idF) {
            $.ajax({
                url: '@Url.Action("Delete")',
                data: { id: idF },
                success: function (data) {
                    if (data) {
                        if (!data.Success) {
                            BootstrapDialog.show({ title: 'Eliminación', message: data.Message });
                        }
                        else {
                            $("#del" + idF).fadeOut("normal", function () { $(this).remove(); });
                        }
                    }
                },
                error: function (xhr, ajaxOptions, thrownError) {
                    alert("Error ejecutando la acción de eliminar. Por favor inténtelo de nuevo.");
                }
            });
        }

        $(document).ready(function () {

            $('.dataTables-example').DataTable({
                language: {
                    "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Spanish.json"
                },
                pageLength: 25,
                dom: '<"html5buttons"B>lTfgitp',
                buttons: [
                    {
                        extend: 'copy',
                        title: 'FuenteEnergeticas',
                        exportOptions: {
                            columns: [ 0, 1 ]
                        }
                    },
                    {
                        extend: 'excel',
                        title: 'FuenteEnergeticas',
                        exportOptions: {
                            columns: [ 0, 1 ]
                        }
                    },
                    {
                        extend: 'pdf',
                        title: 'FuenteEnergeticas',
                        exportOptions: {
                            columns: [ 0, 1 ]
                        }
                    },
                    {
                        extend: 'print',
                        exportOptions: {
                            columns: [ 0, 1 ]
                        },
                        customize: function (win) {
                            $(win.document.body).addClass('white-bg');
                            $(win.document.body).css('font-size', '10px');
                            $(win.document.body).find('table')
                                    .addClass('compact')
                                    .css('font-size', 'inherit');
                        }
                    }
                ]

            });
        });

    </script>
}
