
@model EficienciaEnergetica.Models.Asesor

@{
	ViewBag.Title = "Asesor";
}
<style>
    .input-group-addon { min-width:40px; text-align:center; }
    .form-group{ margin-top: -8px; }
</style>
<br />

@using (Html.BeginForm("Create", "Asesores", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
{
	@Html.AntiForgeryToken()

	<div class="row wrapper border-bottom white-bg page-headingl">
        <div class="row form-fl-title">
            <h2>Nuevo Asesor</h2>
        </div>
		<br />
        @Html.ValidationSummary(true, "Advertencias: ", new { @class = "text-danger" })
		<br />
		<div class="form-group">
			@Html.LabelFor(model => model.Codigo, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-barcode"></i></span>
				    @Html.EditorFor(model => model.Codigo, new { htmlAttributes = new { @class = "form-control", @maxlength = "12" } })
				    @Html.ValidationMessageFor(model => model.Codigo, "", new { @class = "text-danger" })
			    </div>
		    </div>
        </div>

		<div class="form-group">
			@Html.LabelFor(model => model.NombreAsesor, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-font"></i></span>
				    @Html.EditorFor(model => model.NombreAsesor, new { htmlAttributes = new { @class = "form-control" } })
				    @Html.ValidationMessageFor(model => model.NombreAsesor, "", new { @class = "text-danger" })
			    </div>
		    </div>
        </div>

		<div class="form-group">
			<div class="col-md-offset-2 col-md-10">
                @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-default btn-md" })
				<input type="submit" value="Guardar" class="btn btn-primary btn-md" />
			</div>
		</div>

        <br/>

        <div>
	        @Html.ActionLink("Regresar a la lista", "Index")
        </div>

        <br/>
    
	</div>
}



@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")
}
