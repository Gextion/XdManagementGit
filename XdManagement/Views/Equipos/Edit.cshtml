
@model EficienciaEnergetica.Models.Equipos

@{
    ViewBag.Title = "Equipo";
}
<style>
    .input-group-addon {
        min-width: 40px;
        text-align: center;
    }

    .form-group {
        margin-top: -8px;
    }
</style>
<br />

@using (Html.BeginForm("Edit", "Equipos", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="row wrapper border-bottom white-bg page-headingl">
        <div class="row form-fl-title">
            <h2>Editar Equipo</h2>
        </div>
        <br />
        @Html.ValidationSummary(true, "Advertencias: ", new { @class = "text-danger" })
        <br />
        @Html.HiddenFor(model => model.EquipoID)

        <div class="form-group">
            @Html.LabelFor(model => model.DescripcionEquipo, htmlAttributes: new { @class = "control-label col-md-2" })            <div class="col-md-10">
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-cog"></i></span>
                    @Html.EditorFor(model => model.DescripcionEquipo, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DescripcionEquipo, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TipoEquipoID, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-industry"></i></span>
                    @Html.DropDownList("TipoEquipoID", null, new Dictionary<string, Object> { { "class", "selectpicker show-tick form-control" }, { "data-live-search", "true" }, { "data-size", "10" } })
                    @Html.ValidationMessageFor(model => model.TipoEquipoID, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Watt, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-bolt"></i></span>
                    @Html.EditorFor(model => model.Watt, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Watt, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Consumo, htmlAttributes: new { @class = "control-label col-md-2" })            
            <div class="col-md-10">
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-font"></i></span>
                    @Html.EditorFor(model => model.Consumo, new { htmlAttributes = new { @class = "form-control", type = "decimal" } })
                    @Html.ValidationMessageFor(model => model.Consumo, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-default btn-md" })
                <input type="submit" value="Guardar" class="btn btn-primary btn-md" />
            </div>
        </div>

        <br />

        <div>
            @Html.ActionLink("Regresar a la lista", "Index")
        </div>

        <br />

    </div>
}


@section Styles {
    @Styles.Render("~/bundles/bootstrapselect/css/")
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrapselect")
}
